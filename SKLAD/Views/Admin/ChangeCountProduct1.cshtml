@{
    int i = 0;
}
<h1>Выберите товар, у которого необходимо поменять количество:</h1>
<table>
    <tr>
        <th>№</th>
        <th>Название товара</th>
        <th>Категория</th>
        <th>Размер</th>
        <th>Цвет</th>
        <th>Количество</th>
    </tr>
    @foreach (var item in @ViewBag.Products)
   {
       
        <tr>
            <td>@(i = i + 1)</td>
           <td>@item.Name</td>
           <td>@item.CategoryDec</td>
           <td>@item.SizeDec</td>
           <td>@item.ColorDec</td>
           <td><a href="~/Admin/ChangeCountProduct2?id_product=@item.ID">@item.Count</a></td>
       </tr>
   }

</table>