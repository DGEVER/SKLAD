@{
    int i = 0;
}
<h1>Каталог</h1>
<link rel="stylesheet" href="~/css/but.css" />
<form asp-action="Search" asp-controller="Client">
    <div class="form-group">
        <label>Поиск по названию</label>
        <input type="text" name="nameProduct" />
        <input type="submit" value="Поиск" class="btn btn1" />
    </div>
</form>
<form asp-action="AddOrder1" asp-controller="Client">
    <div class="form-group">
        <input type="submit" value="Оформить новый заказ" class="btn btn1" />
    </div>
</form>
<table>
    <tr>
        <th>№</th>
        <th>Название товара</th>
        <th>Категория</th>
        <th>Размер</th>
        <th>Цвет</th>
        <th>Количество</th>
    </tr>
    @foreach (var item in @ViewBag.Products)
   {
       
        <tr>
            <td>@(i = i + 1)</td>
           <td>@item.Name</td>
           <td>@item.CategoryDec</td>
           <td>@item.SizeDec</td>
           <td>@item.ColorDec</td>
           <td>@item.Count</td>
       </tr>
   }

</table>