<h1>Изменить статус заказа</h1>
<form asp-action="ChangeStatus2" asp-controller="Employee">
    <ul style="list-style:none;" class="wrapper">
   <li class="form-row">
       <label>Выберите статус</label>
       <select name="id_status">
        <option disabled>Выберите статус</option>
        @foreach (var item in ViewBag.Status)
       {
           <option value="@item.IdStatus">@item.StatusDescription</option>
       }
    </select>
   </li>
   <input type="hidden" name="id_order" value="@ViewBag.id_order" />
        <input type="submit" value="Отправить" class="btn btn1" />
    </ul>
</form>